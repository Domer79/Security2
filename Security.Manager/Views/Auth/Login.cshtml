@model dynamic

@{
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<div layout="column" layout-fill ng-controller="LoginController">
    <header>
        <div >
            <div class="header-content" layout="row">
                <div class="left-part">
                    <div ng-hide="MainApplicationLink === null">
                        <a href="{{MainApplicationLink}}">
                            <div class="logo">
                            </div>
                        </a>
                    </div>
                    <div class="subsystem-name">Система управления доступом</div>
                </div>
                <div class="right-part">
                    <div data-server-time="" id="timeShower">
                        @DateTime.Now.ToShortTimeString()
                    </div>
                    <div class="lang-selector">
                        @* @Html.Action("_LocalizationPartial", "Main", new { area = "LightingSystem" })*@
                    </div>
                    <div class="user-info-container">
                        <div class="app-menu user-name">                        
                        </div>
                    </div>
                </div>

            </div>
            <div layout="row" class="app-menu subsystem-menu">
                <ul class="menu">               
                </ul>
                <span flex></span>
            </div>
        </div>
    </header>

    <main flex style="overflow-y: auto">
        <div>
            <md-content layout="row" layout-align="center center" ng-cloak class="login-form">
                <md-card flex="flex" flex-gt-sm="50" flex-gt-md="33">
                    <md-toolbar style="background-color: white; color: black;">
                        <div class="md-toolbar-tools">
                            <h2><span>Вход в систему</span></h2>
                        </div>
                    </md-toolbar>
                    <md-card-content>
                        <form name="Form">
                            <label>Логин</label>
                            <md-input-container class="md-block">
                                <input type="text" name="login" ng-model="login" required="" />
                                <div ng-messages="Form.login.$error" role="alert" multiple="" ng-hide="login.length > 0">
                                    <div ng-message="required">Введите логин</div>
                                </div>
                            </md-input-container>
                            <label>Пароль</label>
                            <md-input-container class="md-block">
                                <input type="password" name="password" ng-model="password" required="" />
                                <div ng-messages="Form.password.$error" role="alert" multiple="" ng-hide="password.length > 0">
                                    <div ng-message="required">Введите пароль</div>
                                </div>
                            </md-input-container>
                            <div layout="row" layout-align="space-between center">
                                <span><md-checkbox ng-model="rememberMe" ng-readonly="1 === 1">Запомнить</md-checkbox></span>
                                <md-button type="submit" ng-click="Login()" class="md-raised md-primary" ng-hide="InProcessing">&nbsp Вход &nbsp</md-button>
                            </div>
                            <div ng-bind="ErrorMessage" ng-if="ErrorMessage" style="color:red;">
                            </div>
                        </form>
                    </md-card-content>
                </md-card>
            </md-content>
        </div>
    </main>

    <footer style="position: relative; height: 20px">
        <div class="wrapper">
            <div class="copyr">
                ©2000—@DateTime.Now.Year.ToString() «Передовые системы самообслуживания». Система управления доступом на базе "ПСС. Платформа"
                <div class="ver">
                    Версия <span>@ViewBag.Version. </span>

                    <span>Время сервера</span>&nbsp;
                    <div style="float:right;" id="dateTimeShower">@DateTime.Now.ToString(System.Globalization.CultureInfo.CurrentCulture)</div>
                </div>
            </div>
        </div>
    </footer>   
</div>